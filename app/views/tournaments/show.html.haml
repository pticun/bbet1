%h1
  = @tournament.name
%p
  = @tournament.description

.center Rounds
%table.table.table-dark.table-striped.table-hover
  %tr
    %th Round Name
    %th Bet
  - @tournament.rounds.each do |round|
    %tr
      %td= link_to round, round_path(round)
      %td
        - if round.open?
          =link_to "Bet!", bet_round_path(round)
        - else
          ="No more bets"

.center Dashboard
%table.table.table-dark.table-striped.table-hover
  %tr
    %th User
    %th Points
  - @tournament.scores.each do |user_id, score|
    %tr
      %td= user_id
      %td= score


-if current_user.try(:admin?)
  = link_to 'Create new round', new_tournament_round_path(@tournament)
  \|
  = link_to 'Edit round', edit_tournament_path(@tournament)
  \|
= link_to 'Back', tournaments_path
